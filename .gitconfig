[user]
	email = ichi.ttht.1@gmail.com
	name = ichi

[color]
	ui = auto
	diff = auto
	status = auto
	branch = auto
	interactive = auto
	autocrlf = true

[alias]
	ad = add
	br = branch
	ci = commit
	cm = commit
	ca = commit --amend -C HEAD
	ci = commit --interactive
	co = checkout
	lo = log --decorate=full
	lg = log --decorate=full --graph
	ls = log --decorate=full --name-status
	st = status
	mn = merge --no-ff

[color "branch"]
       current = yellow reverse
       local = yellow
       remote = cyan

[core]
	editor = "emacs -nw"
	excludesfile = ~/.gitignore_global
#	pager = nkf -w | less -R
	pager = less -R
	filemode = false

[push]
	default = matching

[merge]
	tool = git-p4merge

[mergetool "git-p4merge"]
	cmd = git-p4merge "$BASE" "$LOCAL" "$REMOTE" "$MERGED"
	trustExitCode = false

